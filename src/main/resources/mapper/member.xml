<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jida.mapper.MemberMapper">

	<resultMap type="member" id="member">
		<result column="member_id" property="memberId"/>
		<result column="id" property="id"/>
		<result column="password" property="password"/>
		<result column="email" property="email"/>
		<result column="nickname" property="nickname"/>
		<result column="role" property="authority"/>
	</resultMap>

	<select id="loginMember" parameterType="member" resultMap="member">
		select *
		from member
		where id = #{id} and password = #{password}
	</select>

	<select id="findById" parameterType="member" resultMap="member">
		select *
		from member
		where id=#{id}
	</select>
	
	<insert id="joinMember" parameterType="member">
		insert into member (id, password, email, nickname, role)
		values (#{id},#{password},#{email},#{nickname},#{authority})
	</insert>

</mapper>